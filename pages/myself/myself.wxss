.top {
  height: 400rpx;
  background-color: black;
  position: relative;
  margin-bottom: 100rpx;
}
.top .img{
  width: 100%;
  height: 400rpx;

}
.top .btn-login{
  position: absolute;
  transform: translateX(-50%);
  left: 50%;
  top: 10%;
  z-index: 999;
}
.top .user-detail{
  position: absolute;
  top: 70%;
  left: 50%;
  transform: translateX(-50%);
  color: aliceblue;
  text-align: center;
}
.top .user-detail .user-head{
  height: 150rpx;
  width: 150rpx;
  border-radius: 50%;
  background-color: aliceblue;
  margin-top: 10rpx;
}

.top .img .user-img{
  width: 100%;
  height: 100%;
  filter: blur(6rpx);
}
