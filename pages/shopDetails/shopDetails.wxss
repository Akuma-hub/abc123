page{
  width: 100%;
  height: 100%;
  background-color: #f7f4f4;
}
.shop-details{
  padding: 10rpx;
}

swiper{
  width: 100%;
  height: calc(100vw*600/1080);
}

swiper-item image{
  width: 100%;
}

.item-info{
  display: flex;
  height: 180rpx;
  flex-wrap: wrap;
  justify-content: center;
  align-items: center;
  padding: 30rpx;
  background-color: white;
  border-radius: 0 0 5rpx 5rpx;
}

.icon{
  display: flex;
  justify-content: center;
  align-items: center;
}

.icon text{
  font-size: 50rpx;
}

.item-info .icon{
  flex: 2;
}

.item-info .sequence-info{
  flex: 2;
}
.btn-appioint{
  color: white;
  font-size: 32rpx;
  border-radius: 10rpx;
  text-align: center;
  padding: 10rpx 0;
  flex: 1;
  background-color: rgb(118, 250, 140);
}
.btn-appioint-false{
  color: white;
  font-size: 32rpx;
  border-radius: 10rpx;
  text-align: center;
  padding: 10rpx 0;
  flex: 1;
  background-color: rgb(243, 117, 117);
}

.item-title{
  padding: 0 20rpx;
  height: 100rpx;
  margin-top: 20rpx;
  border-radius: 5rpx 5rpx 0 0;
  font-size: 32rpx;
  background-color: white;
  border-bottom: 2rpx solid  #f7f4f4;
  display: flex;
  align-items: center;
}
.icon{
  margin-left: 10rpx;
}